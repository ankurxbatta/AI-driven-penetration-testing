{
  "mcpServers": {
    "kali-pentest": {
      "command": "docker",
      "args": [
        "run", 
        "--rm", 
        "-i", 
        "--cap-add=NET_RAW", 
        "--cap-add=NET_ADMIN", 
        "--network=host", 
        "kali-kali-pentest-mcp"
      ]
    },
    "MCP_DOCKER": {
      "command": "docker",
      "args": [
        "mcp", 
        "gateway", 
        "run"
      ]
    }
  }
}
